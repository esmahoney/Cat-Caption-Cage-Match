# Cat Caption Cage Match - Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# LLM API Keys (Groq is preferred - faster and free!)
# Get Groq key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Fallback: Google Gemini API key
# Get yours at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Optional: TheCatAPI key for higher rate limits
# Get yours at: https://thecatapi.com/signup
THECATAPI_KEY=your_cat_api_key_here

# Optional: Enable fake LLM mode for testing without API key
# Set to "true" to use random scores instead of real LLM
FAKE_LLM_MODE=false

# Optional: Number of rounds per game (default: 5)
ROUNDS_PER_GAME=5
